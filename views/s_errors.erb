<div class="container">
  <div class="row">
    <div class="twelvecol last">     
     <label>課題
       <select id="selectassignment" onchange="glob.updateSummary(this.id);">
	<option value="all" label="全て"></option>
	<% @assignments.each do |a| %>
	  <option value="<%=a.id%>" label="<%=a.title%>"></option>
	<% end %>
      </select>
     </label>
     <label>エラー・タイプ
      <select id="selecttype" onchange="glob.updateSummary(this.id);">
	<option value="all" label="全て"></option>
	<% @errortags.collect {|e| e.type}.uniq.each do |t| %>
	  <option value="<%=t%>" label="<%=t%>"></option> 
	<% end %>
      </select>
     </label>
      <input type="button" value="リセット" onclick="glob.updateSummary(this.id);">
    </div>
  </div>
  <div class="row">
    <div class="twelvecol last">
	 <table id="stattable">
	   <tbody></tbody>
	 </table>
  </div>
  <div class="row">
    <div class="twelvecol last">
      <table id="allerrortable">
	<thead>
	  <tr><th>学習者</th><th>type</th><th>エラー</th><th>訂正</th><th>コメント</th><th>理解</th><th>同意</th><th>レスポンス</th><th>文</th><th>課題</th></tr>
	</thead>
	<tbody>

	</tbody>
      </table>
    </div>
  </div>
</div>
