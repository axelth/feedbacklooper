<div class='errors'>
  <table id="errortable">
    <thead>
      <tr><th>Nr</th><th>String</th><th>Type</th><th>Action</th><th></th></tr>
    </thead>
    <tbody>
      <% @errors.each_with_index do |e,i|%>
	<tr>
	  <td><%=(i + 1).to_s%></td><td><%='string'%></td><td><%=e.type%></td><td><%=e.action%></td>
	</tr>
      <% end %>
    </tbody>
  </table>
  <table id="feedbacktable">
  <form>
  <tbody>
    <% @errors.each do |e| %>
      <tr><td>Correction: </td><td><%= e.correction %></td></tr>
      <tr><td>Comment: </td><td><%= e.comment %></td></tr>
      <tr><td>Understanding</td><td><select name="<%="#{e.id}[understanding]"%>">
	    <option value="0" label="disagree">I understand but disagree</option>
	    <option value="1" label="don't understand">Don't understand</option>
	    <option value="2" label="think I understand">Think I understand</option>
	    <option value="3" label="understand &amp; agree">I understand and agree</option>

	  </select></td></tr>
      <tr><td>Response: </td><td><input type="text" name="<%="#{e.id}[response]"%>"></td></tr>
      <%end%>
  </tbody>
</table>
<form>
</div>

<div class='text'>
  <p id="originaltext"><%= @composition.content %><p>
</div>
